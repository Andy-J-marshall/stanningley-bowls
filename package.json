{
  "private": true,
  "homepage": "https://www.stanningleybowlsclub.co.uk",
  "scripts": {
    "get-stats": "python3 ./scripts/pythonScripts/deleteOldReports.py && npx playwright test --config ./scripts/bowlsnet/playwright.config.ts",
    "get-stats-and-update": "npm run get-stats && npm run update-stats",
    "get-stats-update-deploy": "npm run get-stats-and-update && npm run build-deploy && npm run commit-updated-stats",
    "update-stats": "python3 ./scripts/pythonScripts/bowls.py && python3 ./scripts/pythonScripts/bowlsCombined.py",
    "commit-updated-stats": "git stash && git checkout update_stats_prod && git pull && git merge master && git add bowlsnetReports/* && git add src/data/* && git commit -m 'updated stats' && git push && gh pr create --fill && git checkout master && git pull",
    "start": "vite",
    "build": "vite build && npm run tests",
    "deploy": "gh-pages -d dist",
    "build-deploy": "npm run build && npm run deploy",
    "tests": "npm run unit-tests && npm run ui-tests",
    "unit-tests": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'tests/unit/**/*.ts'",
    "ui-tests": "npx playwright test",
    "debug-bowlsnet-report-script": "npx playwright test --debug --config ./scripts/bowlsnet/playwright.config.ts",
    "ui-test-reports": "npx playwright show-report"
  },
  "dependencies": {
    "bootstrap": "^5.3.3",
    "gh-pages": "^6.1.1",
    "react": "^17.0.2",
    "react-bootstrap": "^2.10.3",
    "react-bootstrap-typeahead": "^5.2.2",
    "react-dom": "^17.0.2",
    "react-router": "^6.23.1",
    "react-router-dom": "^6.23.1",
    "vite": "^5.2.0",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "@playwright/test": "^1.24.0",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@vitejs/plugin-react": "^4.3.1",
    "chai": "^4.3.6",
    "mocha": "^10.0.0",
    "ts-node": "^10.9.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
